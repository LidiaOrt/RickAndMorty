<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character_row__image__character"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/character_row__label__name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textAlignment="viewStart"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/character_row__image__character"
        app:layout_constraintStart_toEndOf="@id/character_row__image__character"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Personaje"/>

</androidx.constraintlayout.widget.ConstraintLayout>